<h1>Tasks</h1>

<p><%= link_to "Add a new task", new_task_path %></p>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <strong><%= link_to task.title, task_path(task) %></strong>
      <span> - <%= task.completed? ? "Completed" : "Pending" %></span>
      <br>
      <small><%= task.details %></small>
      <div>
        <%= link_to "Edit", edit_task_path(task) %> |
        <%= link_to "Delete", task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    </li>
  <% end %>
</ul>
